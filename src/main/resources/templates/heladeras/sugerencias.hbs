<!-- Hago un .hbs con toda la estructura html y no heredo del base.hbs porque solo necesito mostrar un tabla y no el nav,
 sino habría que cambiar el base para que no muestre el nav para casos particulares
 -->

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <!-- Referencia al archivo CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/iconHead.png" type="image/x-icon">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css"
          rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="https://kit.fontawesome.com/115c7ea5e6.js" crossorigin="anonymous"></script>
</head>
<body>

<hr class="my-3 border-0">

<div class="container mt-1">
    <!-- Contenido propio de cada página -->
    <section class="container">
        <div class="col-md-12">
            <table class="table caption-top table-hover table-bordered table-sm align-middle text-center">
                <thead>
                <tr class="align-middle">
                    <th scope="col">Nombre</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Lugar Disponible</th>
                </tr>
                </thead>
                <tbody class="table-group-divider">
                {{#each heladerasSugeridas}}
                    <tr>
                        <td>{{this.nombre}}</td>
                        <td>{{this.direccion}}</td>
                        <td>{{this.lugarDisponible}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </section>
</div>

{{#block "agregarScript"}}
{{/block}}
<script src="/js/validacionDatos.js"></script>
</body>
</html>