{{#partial "contenido"}}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <h1 class="h1">Detalles del Incidente</h1>
                <hr class="border-1">
                <div class="card mb-3 incident-details">
                    <div class="card-body">
                        <h5 class="card-title">Fecha: {{incidente.fecha}}</h5>
                        <p class="card-text">Descripci√≥n: {{incidente.descripcion}}</p>
                        <div class="text-center">

                            <img src="/imagenes/{{incidente.pathFoto}}" alt="Foto del Incidente"
                                 class="img-fluid incident-image">

                        </div>
                        <div class="mt-3 text-center">
                            <form action="/visita" method="GET">
                                <input type="hidden" name="id" value="{{incidente.id}}">
                                <button type="submit" class="btn btn-primary">Registrar Visita</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/partial}}
{{> templates/base}}