{{#partial "contenido"}}

    <div class="container mt-lg-5 mt-5 p-lg-5">
        <div class="row justify-content-center text-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="row mb-3">
                    <div class="col-md-12 text-center">
                        <h1 class="h1">Carga de Archivo CSV</h1>
                    </div>
                </div>
                <div class="row mb-3">
                    <h5 class="text-center">
                        <a href="/archivo_ejemplo.csv" class="text-center" download>Descargar Ejemplo de Archivo CSV</a>
                    </h5>
                    <div class="container mt-5">
                        <!-- Formulario con validación -->
                        <form class="row g-3 needs-validation" action="/cargaMasiva" method="POST"
                              enctype="multipart/form-data" novalidate>
                            <div class="text-center mb-5">
                                <label for="csv-file" class="form-label">Arrastre o Seleccione el Archivo CSV que desea
                                    subir</label>
                                <input type="file" id="csv-file" name="csv-file" accept=".csv" required
                                       class="form-control">
                                <div class="invalid-feedback">
                                    Por favor, seleccione un archivo CSV válido.
                                </div>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary">Subir Archivo</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

{{#partial "agregarScript"}}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/cargarArchivosCSV.js"></script>
{{/partial}}
{{> templates/base}}